  {
    src: "/images/galeri/gokalp-lastikcilik-hankook-bayi-dis-cephe.jpg",
    alt: "Gökalp Lastikçilik Hankook Yetkili Bayi Dükkan Dış Cephesi Mersin",
    title: "Dükkanımız - Hankook Bayi"
  },
  {
    src: "/images/galeri/gokalp-oto-lastik-dukkan-mersin.jpg",
    alt: "Gökalp Oto Lastik Dükkan Görünümü Mersin",
    title: "Servis Alanımız"
  },
  {
    src: "/images/galeri/pirelli-p-zero-lastik-225-40r19-mersin.jpg",
    alt: "Pirelli P-Zero 225/40R19 lastik montajı Gökalp Lastikçilik Mersin",
    title: "Pirelli P-Zero Montajı"
  },
  {
    src: "/images/galeri/laufenn-s-fit-lastik-195-55r16-mersin.jpg",
    alt: "Laufenn S FIT EQ+ 195/55R16 lastik Gökalp Oto Lastik Mersin",
    title: "Laufenn S FIT EQ+"
  },
  {
