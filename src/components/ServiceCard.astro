const iconData = iconSvgs[icon] || iconSvgs.tire;
---

<a
  href={href}
  class={`service-card group block reveal reveal-delay-${Math.min(index + 1, 4)}`}
  aria-label={`${title} hizmetimiz hakkında detaylı bilgi`}
>
  <div class="card-inner">
    <!-- Icon -->
    <div class={`icon-wrapper ${iconData.bg}`}>
      <svg class={`w-7 h-7 ${iconData.color}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" set:html={iconData.path} />
    </div>
    
    <!-- Content -->
    <h3 class="card-title">{title}</h3>
    <p class="card-desc">{description}</p>
    
    <!-- Arrow -->
    <div class="card-arrow">
      <span>İncele</span>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </div>
  </div>
</a>

<style>
  .service-card {
    @apply relative overflow-hidden rounded-2xl;
  }

  .card-inner {
    @apply relative bg-white border border-gray-100 rounded-2xl p-6 lg:p-7
           transition-all duration-300 h-full
           hover:border-primary/30 hover:shadow-xl hover:shadow-primary/5;
  }

  .service-card:hover .card-inner {
    transform: translateY(-4px);
  }

  .icon-wrapper {
    @apply w-14 h-14 rounded-2xl flex items-center justify-center mb-5
           transition-all duration-300;
  }

  .service-card:hover .icon-wrapper {
    @apply scale-110;
  }

  .card-title {
    @apply text-gray-900 font-bold text-lg mb-2 transition-colors duration-200;
  }

  .service-card:hover .card-title {
    @apply text-primary;
  }

  .card-desc {
    @apply text-gray-500 text-sm leading-relaxed mb-5;
  }

  .card-arrow {
    @apply inline-flex items-center gap-2 text-primary text-sm font-semibold
           opacity-0 translate-x-[-8px] transition-all duration-300;
  }

  .service-card:hover .card-arrow {
    @apply opacity-100 translate-x-0;
  }
</style>
