---
import { siteConfig, services } from '../data/siteConfig';
---

<footer class="bg-gray-900 relative overflow-hidden" role="contentinfo">
  <!-- Decorative top accent -->
  <div class="h-1 bg-gradient-to-r from-primary via-orange-400 to-primary"></div>

  <!-- Main Footer -->
  <div class="container-custom pt-16 pb-12 lg:pt-20 lg:pb-16">
    <!-- Top: Logo + CTA Row -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8 mb-14 pb-14 border-b border-white/10">
      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-6">
        <a href="/" class="inline-block group">
          <img
            src="/images/logo-beyaz.png"
            alt="Gökalp Lastikçilik ve Akü Satışı"
            width="200"
            height="100"
            class="h-20 lg:h-24 w-auto transition-transform duration-300 group-hover:scale-105"
            loading="lazy"
          />
        </a>
        <div class="hidden sm:block w-px h-12 bg-white/10"></div>
        <div>
          <p class="text-white font-semibold text-lg">Mersin'de 7/24 Hizmetinizdeyiz</p>
          <p class="text-gray-400 text-sm">Hankook Yetkili Bayi & Bosch Akü Bayii</p>
        </div>
      </div>

      <div class="flex flex-wrap items-center gap-3">
        <a
          href={`tel:${siteConfig.phone}`}
          class="inline-flex items-center gap-2 bg-primary hover:bg-primary-hover text-white font-bold px-6 py-3 rounded-xl transition-all"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          {siteConfig.phoneFormatted}
        </a>
        <a
          href={siteConfig.whatsappLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-[#25D366] hover:bg-[#20BD5A] text-white font-bold px-6 py-3 rounded-xl transition-all"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          WhatsApp
        </a>
      </div>
    </div>

    <!-- Links Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-10 lg:gap-8">
      <!-- Col 1: About -->
      <div class="col-span-2 md:col-span-1">
        <h3 class="text-white font-bold text-sm uppercase tracking-wider mb-5">Hakkımızda</h3>
        <p class="text-gray-400 text-sm leading-relaxed mb-5">
          20 yılı aşkın tecrübemizle Mersin'de lastik, akü ve jant hizmetleri sunuyoruz. Dürüstlük ve kalite birinci önceliğimizdir.
        </p>
        <div class="flex items-center gap-2">
          <span class="inline-flex items-center gap-1.5 bg-green-500/10 text-green-400 text-xs font-bold px-3 py-1.5 rounded-full border border-green-500/20">
            <span class="w-1.5 h-1.5 bg-green-400 rounded-full animate-pulse"></span>
            7/24 Hizmet
          </span>
        </div>
      </div>

      <!-- Col 2: Quick Links -->
      <div>
        <h3 class="text-white font-bold text-sm uppercase tracking-wider mb-5">Sayfalar</h3>
        <ul class="space-y-3">
          <li><a href="/" class="footer-link">Anasayfa</a></li>
          <li><a href="/hakkimizda" class="footer-link">Hakkımızda</a></li>
          <li><a href="/hizmetler" class="footer-link">Hizmetler</a></li>
          <li><a href="/blog" class="footer-link">Blog</a></li>
          <li><a href="/iletisim" class="footer-link">İletişim</a></li>
        </ul>
      </div>

      <!-- Col 3: Services -->
      <div>
        <h3 class="text-white font-bold text-sm uppercase tracking-wider mb-5">Hizmetler</h3>
        <ul class="space-y-3">
          {services.map((service) => (
            <li>
              <a href={`/hizmetler/${service.slug}`} class="footer-link">
                {service.title}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Col 4: Contact -->
      <div>
        <h3 class="text-white font-bold text-sm uppercase tracking-wider mb-5">İletişim</h3>
        <ul class="space-y-4">
          <li>
            <a href={`tel:${siteConfig.phone}`} class="flex items-start gap-3 group">
              <svg class="w-4 h-4 text-primary mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-gray-300 group-hover:text-primary transition-colors text-sm font-medium">
                {siteConfig.phoneFormatted}
              </span>
            </a>
          </li>
          <li>
            <a href={`mailto:${siteConfig.email}`} class="flex items-start gap-3 group">
              <svg class="w-4 h-4 text-primary mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="text-gray-300 group-hover:text-primary transition-colors text-sm">
                {siteConfig.email}
              </span>
            </a>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-4 h-4 text-primary mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-gray-400 text-sm leading-relaxed">
              {siteConfig.address.full}
            </span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-white/[0.06]">
    <div class="container-custom py-5 flex flex-col sm:flex-row items-center justify-between gap-3">
      <p class="text-gray-500 text-xs">
        &copy; {new Date().getFullYear()} Gökalp Lastikçilik ve Akü Satışı. Tüm hakları saklıdır.
      </p>
      <div class="flex items-center gap-4 text-gray-600 text-xs">
        <span>Hankook Yetkili Bayi</span>
        <span class="w-1 h-1 bg-gray-600 rounded-full"></span>
        <span>Bosch Akü Bayii</span>
        <span class="w-1 h-1 bg-gray-600 rounded-full"></span>
        <span>Mersin</span>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-link {
    @apply text-gray-400 hover:text-white transition-colors duration-200 text-sm
           inline-flex items-center gap-1.5;
  }
  .footer-link:hover {
    @apply translate-x-1;
  }
</style>
