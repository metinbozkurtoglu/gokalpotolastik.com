---
import { siteConfig } from '../data/siteConfig';

// Google Places API'den çekilen veriler (statik olarak saklıyoruz)
const googleData = {
  rating: 4.9,
  totalReviews: 42,
  placeId: "ChIJi4h4peDzJxURSX7YSaDZSPg",
  reviews: [
    {
      author: "Rıdvan Eryılmaz",
      rating: 5,
      text: "Mükemmel hizmet verip beklerken hiç canım sıkılmadı hoş sohpetlerinden dolayı. Teşekkürler İlyas bey, tam bir esnaf.",
      photo: "https://lh3.googleusercontent.com/a/ACg8ocJn_jvqg4_w8ji9KTsvr60V2SBPDou7d3OAg8jW9Dz1AP-S2Q=s128-c0x00000000-cc-rp-mo"
    },
    {
      author: "Hakan Bilgisayar",
      rating: 5,
      text: "Gece 23:30'da sağolsun lastik için dükkanı açtı ilgilendi. Saygılı ve efendi bir arkadaş.",
      photo: "https://lh3.googleusercontent.com/a-/ALV-UjUVvuOivIpZDAEVD9eb9za7_JUusBB8Jr8Gb0okMz_WcAxlZcO8=s128-c0x00000000-cc-rp-mo-ba3"
    },
    {
      author: "Musa Bilgi",
      rating: 5,
      text: "Gece saat 04'te aracımın lastiği patladı, aradım çok yardımcı oldu. 20 dakikada gelip işimizi halletti. Mahmut usta işinin ehli.",
      photo: "https://lh3.googleusercontent.com/a-/ALV-UjUEGYW20uqA_IBMriMKf_Wl85iIULzYaCgeIsCRuAH5ZnFakJw=s128-c0x00000000-cc-rp-mo"
    },
    {
      author: "Bahattin Taşkın",
      rating: 5,
      text: "Yayla yolunda yolda kaldım, sağolsun İlyas ustayı arar aramaz 20 dakika içinde geldiler. Profesyonel hizmet.",
      photo: "https://lh3.googleusercontent.com/a/ACg8ocKUOQaWvODtF3LOn8LcfgmBU6lgm9Lv74bjyX9eLnc5KGk6hQ=s128-c0x00000000-cc-rp-mo"
    },
    {
      author: "Burak Arslan",
      rating: 5,
      text: "Gece 3'te aradım direk geldi. Hizmet 10 numara, teşekkür ederim.",
      photo: "https://lh3.googleusercontent.com/a-/ALV-UjXRkYkPq9a8zS6N_4GRVP3qRXHHKQJLPt7VfKj9yJwJYcNvWZk=s128-c0x00000000-cc-rp-mo"
    },
    {
      author: "Jiyan Doğan",
      rating: 5,
      text: "Eline emeğine sağlık abi, memnunum fazlasıyla. Esnaf adam.",
      photo: "https://lh3.googleusercontent.com/a/ACg8ocI9V1bF7zPf3vHb2R8Kx5JdN_qsW4M6TcPzRnLm8B9XHQc=s128-c0x00000000-cc-rp-mo"
    }
  ]
};

const googleMapsUrl = `https://www.google.com/maps/place/?q=place_id:${googleData.placeId}`;
const writeReviewUrl = `https://search.google.com/local/writereview?placeid=${googleData.placeId}`;
---

<section class="py-20 lg:py-28 bg-gray-50 relative overflow-hidden">
  <div class="container-custom">

    <!-- Header -->
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-6 mb-12">
      <div>
        <div class="flex items-center gap-3 mb-4 reveal">
          <span class="w-10 h-px bg-primary"></span>
          <span class="text-primary font-semibold text-xs uppercase tracking-[0.2em]">Müşteri Yorumları</span>
        </div>
        <h2 class="text-3xl lg:text-[2.75rem] font-bold text-gray-900 leading-[1.1] reveal reveal-delay-1">
          Güvenilir Hizmetin <span class="text-primary">Yansıması</span>
        </h2>
      </div>

      <!-- Google Badge -->
      <div class="flex items-center gap-4 reveal reveal-delay-2">
        <div class="flex items-center gap-3 bg-white border border-gray-200 rounded-xl px-5 py-3 shadow-sm">
          <!-- Google Logo -->
          <svg class="w-6 h-6" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>

          <div class="flex flex-col">
            <div class="flex items-center gap-1">
              <span class="text-gray-900 font-bold text-xl">{googleData.rating}</span>
              <div class="flex">
                {[1,2,3,4,5].map((star) => (
                  <svg class={`w-4 h-4 ${star <= Math.round(googleData.rating) ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
            </div>
            <span class="text-gray-500 text-xs">{googleData.totalReviews} değerlendirme</span>
          </div>
        </div>

        <a
          href={writeReviewUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:inline-flex items-center gap-2 text-primary font-medium text-sm hover:underline"
        >
          Yorum Yaz
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Reviews Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      {googleData.reviews.map((review, i) => (
        <div class={`bg-white rounded-2xl p-6 border border-gray-100 hover:border-gray-200 hover:shadow-lg transition-all duration-300 reveal reveal-delay-${Math.min(i + 1, 6)}`}>
          <!-- Header -->
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
              <!-- Avatar -->
              <img
                src={review.photo}
                alt={review.author}
                class="w-11 h-11 rounded-full object-cover border-2 border-gray-100 flex-shrink-0"
                loading="lazy"
              />
              <div>
                <p class="text-gray-900 font-semibold text-sm">{review.author}</p>
                <p class="text-gray-400 text-xs">Google Yorumu</p>
              </div>
            </div>
            <!-- Google Icon -->
            <svg class="w-5 h-5 flex-shrink-0" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
          </div>

          <!-- Stars -->
          <div class="flex gap-0.5 mb-3">
            {[1,2,3,4,5].map((star) => (
              <svg class={`w-4 h-4 ${star <= review.rating ? 'text-yellow-400' : 'text-gray-200'}`} fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Review Text -->
          <p class="text-gray-600 text-sm leading-relaxed">"{review.text}"</p>
        </div>
      ))}
    </div>

    <!-- Footer CTA -->
    <div class="text-center mt-12 reveal">
      <a
        href={googleMapsUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-gray-500 hover:text-primary font-medium text-sm transition-colors"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Tüm {googleData.totalReviews} yorumu Google'da görüntüle
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>

  </div>
</section>
