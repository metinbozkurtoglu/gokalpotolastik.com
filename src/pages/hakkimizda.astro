---
import BaseLayout from '../layouts/BaseLayout.astro';
import GoogleReviewsStrip from '../components/GoogleReviewsStrip.astro';
import { siteConfig } from '../data/siteConfig';

const title = "Hakkımızda | Gökalp Lastikçilik Mersin - Hankook Yetkili Bayi";
const description = "Gökalp Lastikçilik, Mersin'de Hankook yetkili bayi ve Bosch akü bayii olarak 20 yılı aşkın deneyimle lastik, akü ve jant hizmetleri sunmaktadır. 7/24 hizmet.";

const breadcrumbs = [
  { name: 'Anasayfa', url: '/' },
  { name: 'Hakkımızda', url: '/hakkimizda' },
];

const timeline = [
  { year: "2004", title: "Kuruluş", desc: "Mersin'de küçük bir atölye ile lastik tamirciliğine başladık." },
  { year: "2010", title: "Büyüme", desc: "Artan talep ile dükkanımızı genişlettik, yeni ekipmanlar aldık." },
  { year: "2015", title: "Hankook Bayiliği", desc: "Hankook yetkili bayi olarak marka güvencesini müşterilerimize sunduk." },
  { year: "2018", title: "Bosch Ortaklığı", desc: "Bosch akü bayiliği ile hizmet yelpazemizi genişlettik." },
  { year: "2024", title: "7/24 Hizmet", desc: "Mersin genelinde kesintisiz yol yardım hizmeti başlattık." },
];

const values = [
  {
    icon: "honesty",
    title: "Dürüstlük",
    desc: "Gerekmiyorsa satmayız. Müşterilerimize her zaman gerçeği söyler, en doğru çözümü öneririz.",
    color: "from-emerald-500 to-teal-500"
  },
  {
    icon: "quality",
    title: "Kalite",
    desc: "Sadece orijinal, garantili ürünler kullanırız. Kaliteden asla taviz vermeyiz.",
    color: "from-blue-500 to-indigo-500"
  },
  {
    icon: "speed",
    title: "Hız",
    desc: "7/24 ulaşılabilir durumdayız. Acil durumlarda 15-20 dakikada yanınızdayız.",
    color: "from-primary to-orange-500"
  },
  {
    icon: "expertise",
    title: "Uzmanlık",
    desc: "20+ yıllık deneyim ve sürekli eğitimle sektörün en iyisi olmaya çalışıyoruz.",
    color: "from-purple-500 to-pink-500"
  },
];
---

<BaseLayout
  title={title}
  description={description}
  schemaType="about"
  breadcrumbs={breadcrumbs}
>

  <!-- ═══════════════════════════════════════════════════ -->
  <!-- HERO SECTION                                        -->
  <!-- ═══════════════════════════════════════════════════ -->
  <section class="relative bg-gray-900 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-900/95 to-primary/20"></div>

    <div class="container-custom relative py-20 lg:py-28">
      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm">
          {breadcrumbs.map((item, index) => (
            <li class="flex items-center gap-2">
              {index > 0 && <span class="text-gray-500">/</span>}
              {index === breadcrumbs.length - 1 ? (
                <span class="text-gray-400">{item.name}</span>
              ) : (
                <a href={item.url} class="text-gray-400 hover:text-white transition-colors">{item.name}</a>
              )}
            </li>
          ))}
        </ol>
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Sol: İçerik -->
        <div>
          <div class="inline-flex items-center gap-2 bg-primary/10 border border-primary/20 rounded-full px-4 py-2 mb-6 reveal">
            <span class="w-2 h-2 bg-primary rounded-full animate-pulse"></span>
            <span class="text-primary text-sm font-medium">20+ Yıllık Tecrübe</span>
          </div>

          <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight mb-6 reveal reveal-delay-1">
            Mersin'in Güvenilir<br />
            <span class="text-primary">Lastik & Akü</span> Uzmanı
          </h1>

          <p class="text-gray-300 text-lg lg:text-xl leading-relaxed mb-8 max-w-xl reveal reveal-delay-2">
            Mersin'de tek bir ilkeyle yola çıktık: <strong class="text-white">müşteriye dürüst ol, işini doğru yap.</strong> Bu ilke bizi bugünlere getirdi.
          </p>

          <!-- Stats Row -->
          <div class="flex flex-wrap gap-8 mb-8 reveal reveal-delay-3">
            <div>
              <div class="text-3xl lg:text-4xl font-bold text-white">20+</div>
              <div class="text-gray-400 text-sm">Yıl Deneyim</div>
            </div>
            <div class="w-px bg-gray-700"></div>
            <div>
              <div class="text-3xl lg:text-4xl font-bold text-white flex items-center gap-1">
                4.9
                <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              </div>
              <div class="text-gray-400 text-sm">Google Puanı</div>
            </div>
            <div class="w-px bg-gray-700"></div>
            <div>
              <div class="text-3xl lg:text-4xl font-bold text-white">7/24</div>
              <div class="text-gray-400 text-sm">Hizmet</div>
            </div>
          </div>

          <!-- CTA -->
          <a
            href={`tel:${siteConfig.phone}`}
            class="inline-flex items-center gap-3 bg-primary hover:bg-primary-dark text-white font-semibold px-8 py-4 rounded-xl transition-all duration-300 shadow-lg shadow-primary/25 hover:shadow-primary/40"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Bizi Arayın
          </a>
        </div>

        <!-- Sağ: Fotoğraf -->
        <div class="relative reveal-right reveal-delay-2">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <picture>
              <source srcset="/images/galeri/gokalp-lastikcilik-hankook-bayi-dis-cephe.webp" type="image/webp" />
              <img
                src="/images/galeri/gokalp-lastikcilik-hankook-bayi-dis-cephe.jpg"
                alt="Gökalp Lastikçilik Hankook Yetkili Bayi Dükkan Dış Cephesi Mersin"
                width="1200"
                height="1600"
                class="w-full h-auto object-cover"
                loading="lazy"
                decoding="async"
              />
            </picture>
            <!-- Overlay gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/40 to-transparent"></div>
          </div>

          <!-- Floating badge -->
          <div class="absolute -bottom-4 -left-4 lg:-bottom-6 lg:-left-6 bg-white rounded-xl p-4 shadow-xl">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div>
                <div class="font-bold text-gray-900">Yetkili Bayi</div>
                <div class="text-sm text-gray-500">Hankook & Bosch</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════════════════ -->
  <!-- YETKİLİ BAYİLİKLER                                  -->
  <!-- ═══════════════════════════════════════════════════ -->
  <section class="py-16 lg:py-20 bg-white border-b border-gray-100">
    <div class="container-custom">
      <div class="text-center mb-12">
        <p class="text-gray-500 font-medium reveal">Resmi Yetkili Bayisi Olduğumuz Markalar</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8 max-w-4xl mx-auto">
        <!-- Hankook -->
        <div class="group relative bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-2xl p-8 hover:border-primary/30 hover:shadow-lg transition-all duration-300 reveal-scale reveal-delay-1">
          <div class="flex items-center gap-6">
            <div class="w-24 h-24 flex items-center justify-center bg-white rounded-xl shadow-sm border border-gray-100 p-4">
              <img src="/images/brands/hankook.svg" alt="Hankook Logo" class="w-full h-auto" />
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-1">Hankook Yetkili Bayi</h3>
              <p class="text-gray-500 text-sm mb-3">Dünyanın 7. büyük lastik üreticisi</p>
              <div class="flex items-center gap-2">
                <span class="inline-flex items-center gap-1 text-xs font-medium text-emerald-600 bg-emerald-50 px-2 py-1 rounded-full">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  Orijinal Ürün
                </span>
                <span class="inline-flex items-center gap-1 text-xs font-medium text-blue-600 bg-blue-50 px-2 py-1 rounded-full">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  Fabrika Fiyatı
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Bosch -->
        <div class="group relative bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-2xl p-8 hover:border-primary/30 hover:shadow-lg transition-all duration-300 reveal-scale reveal-delay-2">
          <div class="flex items-center gap-6">
            <div class="w-24 h-24 flex items-center justify-center bg-white rounded-xl shadow-sm border border-gray-100 p-4">
              <picture>
                <source srcset="/images/brands/bosch.webp" type="image/webp" />
                <img src="/images/brands/bosch.png" alt="Bosch Logo" width="120" height="40" class="w-full h-auto" loading="lazy" decoding="async" />
              </picture>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-1">Bosch Akü Bayii</h3>
              <p class="text-gray-500 text-sm mb-3">130 yıllık Alman mühendisliği</p>
              <div class="flex items-center gap-2">
                <span class="inline-flex items-center gap-1 text-xs font-medium text-emerald-600 bg-emerald-50 px-2 py-1 rounded-full">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  2 Yıl Garanti
                </span>
                <span class="inline-flex items-center gap-1 text-xs font-medium text-blue-600 bg-blue-50 px-2 py-1 rounded-full">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  Yerinde Montaj
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════════════════ -->
  <!-- HİKAYEMİZ - TIMELINE                                -->
  <!-- ═══════════════════════════════════════════════════ -->
  <section class="py-20 lg:py-28 bg-gray-50 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-primary/20 to-transparent"></div>

    <div class="container-custom relative">
      <div class="text-center mb-16">
        <div class="flex items-center justify-center gap-3 mb-4 reveal">
          <span class="w-10 h-px bg-primary"></span>
          <span class="text-primary font-semibold text-xs uppercase tracking-[0.2em]">Hikayemiz</span>
          <span class="w-10 h-px bg-primary"></span>
        </div>
        <h2 class="text-3xl lg:text-[2.75rem] font-bold text-gray-900 mb-4 reveal reveal-delay-1">Yolun Başından Bugüne</h2>
        <p class="text-gray-500 max-w-2xl mx-auto reveal reveal-delay-2">
          Küçük bir atölyede başlayan hikayemiz, güven ve kaliteyle büyüdü.
        </p>
      </div>

      <!-- Timeline -->
      <div class="relative max-w-4xl mx-auto">
        <!-- Vertical Line -->
        <div class="absolute left-4 lg:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-primary via-primary/50 to-primary/20 lg:-translate-x-1/2"></div>

        <div class="space-y-8 lg:space-y-12">
          {timeline.map((item, i) => (
            <div class={`relative flex items-center gap-6 lg:gap-12 ${i % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} ${i % 2 === 0 ? 'reveal-left' : 'reveal-right'}`}>
              <!-- Dot -->
              <div class="absolute left-4 lg:left-1/2 w-4 h-4 bg-primary rounded-full border-4 border-white shadow-lg lg:-translate-x-1/2 z-10"></div>

              <!-- Content -->
              <div class={`ml-12 lg:ml-0 lg:w-1/2 ${i % 2 === 0 ? 'lg:pr-16 lg:text-right' : 'lg:pl-16'}`}>
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-md hover:border-primary/20 transition-all duration-300">
                  <div class={`inline-block bg-primary/10 text-primary font-bold text-sm px-3 py-1 rounded-lg mb-3`}>
                    {item.year}
                  </div>
                  <h3 class="text-lg font-bold text-gray-900 mb-2">{item.title}</h3>
                  <p class="text-gray-500 text-sm">{item.desc}</p>
                </div>
              </div>

              <!-- Empty space for alternating layout -->
              <div class="hidden lg:block lg:w-1/2"></div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════════════════ -->
  <!-- DEĞERLERİMİZ                                        -->
  <!-- ═══════════════════════════════════════════════════ -->
  <section class="py-20 lg:py-28 bg-white relative">
    <div class="container-custom">
      <div class="text-center mb-16">
        <div class="flex items-center justify-center gap-3 mb-4 reveal">
          <span class="w-10 h-px bg-primary"></span>
          <span class="text-primary font-semibold text-xs uppercase tracking-[0.2em]">Değerlerimiz</span>
          <span class="w-10 h-px bg-primary"></span>
        </div>
        <h2 class="text-3xl lg:text-[2.75rem] font-bold text-gray-900 mb-4 reveal reveal-delay-1">Bizi Biz Yapan İlkeler</h2>
        <p class="text-gray-500 max-w-2xl mx-auto reveal reveal-delay-2">
          Her kararımızda, her hizmetimizde bu değerleri rehber ediniyoruz.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((item, i) => (
          <div class={`group relative reveal-scale reveal-delay-${Math.min(i + 1, 4)}`}>
            <div class={`absolute inset-0 bg-gradient-to-br ${item.color} rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-xl`}></div>
            <div class="relative bg-white border border-gray-200 rounded-2xl p-8 hover:border-transparent hover:shadow-xl transition-all duration-300 h-full">
              <div class={`w-14 h-14 rounded-xl bg-gradient-to-br ${item.color} flex items-center justify-center mb-6 shadow-lg`}>
                {item.icon === "honesty" && (
                  <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                )}
                {item.icon === "quality" && (
                  <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                )}
                {item.icon === "speed" && (
                  <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
                {item.icon === "expertise" && (
                  <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{item.title}</h3>
              <p class="text-gray-500 text-sm leading-relaxed">{item.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════════════════ -->
  <!-- MİSYON & VİZYON                                     -->
  <!-- ═══════════════════════════════════════════════════ -->
  <section class="py-20 lg:py-28 bg-gray-900 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-96 h-96 bg-primary rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-500 rounded-full blur-3xl"></div>
    </div>

    <div class="container-custom relative">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
        <!-- Misyon -->
        <div class="text-center lg:text-left reveal-left">
          <div class="inline-flex items-center gap-2 bg-primary/20 border border-primary/30 rounded-full px-4 py-2 mb-6">
            <svg class="w-4 h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <span class="text-primary text-sm font-medium">Misyonumuz</span>
          </div>
          <h3 class="text-2xl lg:text-3xl font-bold text-white mb-6">Güvenli Yolculuklar İçin</h3>
          <p class="text-gray-300 leading-relaxed mb-4">
            Amacımız sadece lastik satmak ya da akü değiştirmek değil. Mersin'de her aracın güvenle yol almasını sağlamak, sürücülere doğru bilgiyi vermek ve ihtiyaç anında yanlarında olmak.
          </p>
          <p class="text-gray-400 leading-relaxed">
            Her müşterimize aynı soruyu soruyoruz: <span class="text-white font-medium">"Kendi aracımız olsa ne yapardık?"</span> Bu soru bizi gereksiz satıştan uzak tutuyor.
          </p>
        </div>

        <!-- Vizyon -->
        <div class="text-center lg:text-left reveal-right">
          <div class="inline-flex items-center gap-2 bg-blue-500/20 border border-blue-500/30 rounded-full px-4 py-2 mb-6">
            <svg class="w-4 h-4 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
