---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHeader from '../../components/PageHeader.astro';
const title = "Blog | Lastik & Akü Rehberi | Gökalp Lastikçilik Mersin";
const description = "Lastik bakımı, akü ömrünü uzatma, kış lastiği rehberi, rot balans bilgileri, Mersin lastik fiyatları ve daha fazlası. Gökalp Lastikçilik Mersin blog sayfası.";

const breadcrumbs = [
  { name: 'Anasayfa', url: '/' },
  { name: 'Blog', url: '/blog' },
];

const blogPosts = [
  {
    slug: "mersin-lastik-fiyatlari-rehberi",
    title: "Mersin'de Lastik Fiyatları 2025: Marka Karşılaştırma Rehberi",
    excerpt: "Mersin lastik fiyatları 2025 güncel karşılaştırma. Hankook, Michelin, Continental, Pirelli, Bridgestone fiyatları ve ebat bazlı maliyet rehberi.",
    date: "2025-12-20",
    category: "Lastik Rehberi",
    categoryColor: "from-orange-500 to-amber-500",
    image: "/images/blog/kis-lastigi.jpg",
    readTime: "7 dk",
    featured: true,
  },
  {
    slug: "mersin-7-24-yol-yardim-hizmeti",
    title: "Mersin'de Yol Yardım Hizmeti: Tüm İlçelere Hizmet",
    excerpt: "Mersin yol yardım hizmeti. Lastik patlaması, akü arızası, acil lastik değişimi. Toroslar, Mezitli, Yenişehir, Tarsus, Erdemli ilçelerine hizmet.",
    date: "2025-12-15",
    category: "Yol Yardım",
    categoryColor: "from-red-500 to-orange-500",
    image: "/images/blog/rot-balans.jpg",
    readTime: "6 dk",
    featured: false,
  },
  {
    slug: "mersin-aku-degisimi-rehberi",
    title: "Mersin'de Akü Değişimi: Fiyatlar, Markalar ve Uzman Önerileri",
    excerpt: "Mersin'de akü değişimi fiyatları, Bosch akü karşılaştırması, akü arızası belirtileri ve uzman önerileri. Ücretsiz akü testi hizmeti.",
    date: "2025-12-10",
    category: "Akü Bakımı",
    categoryColor: "from-yellow-500 to-amber-500",
    image: "/images/blog/aku-bakim.jpg",
    readTime: "6 dk",
    featured: false,
  },
  {
    slug: "mersin-yaz-sicaginda-lastik-aku-bakimi",
    title: "Mersin Yaz Sıcağında Lastik ve Akü Bakımı: 7 Kritik İpucu",
    excerpt: "Mersin'de 40 dereceyi aşan yaz sıcaklarında lastik ve akü bakımı nasıl yapılır? 7 kritik ipucuyla aracınızı koruyun.",
    date: "2025-12-05",
    category: "Araç Bakımı",
    categoryColor: "from-emerald-500 to-teal-500",
    image: "/images/blog/kis-lastigi.jpg",
    readTime: "5 dk",
    featured: false,
  },
  {
    slug: "mersin-kis-lastigi-gerekli-mi",
    title: "Mersin'de Kış Lastiği Takmak Gerekli mi? Uzman Görüşü",
    excerpt: "Mersin'de kış lastiği gerekli mi? Akdeniz ikliminde kış lastiği kullanımı, Toroslar'a seyahat ve 4 mevsim lastik karşılaştırması.",
    date: "2025-11-28",
    category: "Lastik Rehberi",
    categoryColor: "from-blue-500 to-indigo-500",
    image: "/images/blog/rot-balans.jpg",
    readTime: "6 dk",
    featured: false,
  },
  {
    slug: "lastik-hava-basinci-rehberi",
    title: "Lastik Hava Basıncı Rehberi: Mersin'de Yakıt Tasarrufu İpuçları",
    excerpt: "Doğru lastik hava basıncı yakıt tasarrufu sağlar, lastik ömrünü uzatır. Mersin sıcağında basınç yönetimi rehberi.",
    date: "2025-11-20",
    category: "Lastik Rehberi",
    categoryColor: "from-purple-500 to-pink-500",
    image: "/images/blog/aku-bakim.jpg",
    readTime: "5 dk",
    featured: false,
  },
  {
    slug: "kis-lastigi-rehberi",
    title: "Mersin'de Kış Lastiği Rehberi: Ne Zaman Takmalı, Nasıl Seçmeli?",
    excerpt: "Mersin'de kış lastiği seçerken dikkat etmeniz gereken kriterler, takma zamanı ve yasal zorunluluklar hakkında bilmeniz gereken her şey.",
    date: "2025-11-15",
    category: "Lastik Rehberi",
    categoryColor: "from-blue-500 to-indigo-500",
    image: "/images/blog/kis-lastigi.jpg",
    readTime: "5 dk",
    featured: false,
  },
  {
    slug: "aku-omrunu-uzatmanin-5-yolu",
    title: "Mersin'de Akü Ömrünü Uzatmanın 5 Etkili Yolu",
    excerpt: "Mersin sıcağında araç akünüzün ömrünü uzatmak için pratik öneriler. Bosch uzman tavsiyeleriyle akü bakım rehberi.",
    date: "2025-10-28",
    category: "Akü Bakımı",
    categoryColor: "from-emerald-500 to-teal-500",
    image: "/images/blog/aku-bakim.jpg",
    readTime: "4 dk",
    featured: false,
  },
  {
    slug: "rot-balans-neden-onemli",
    title: "Mersin'de Rot Balans Neden Önemli? Belirtileri ve Fiyatları",
    excerpt: "Mersin'de rot balans bozukluğu belirtileri, yapılma sıklığı ve fiyatları. Direksiyon titremesi, düzensiz aşınma çözümü.",
    date: "2025-10-10",
    category: "Araç Bakımı",
    categoryColor: "from-primary to-orange-500",
    image: "/images/blog/rot-balans.jpg",
    readTime: "6 dk",
    featured: false,
  },
];

const featuredPost = blogPosts.find(post => post.featured);
const regularPosts = blogPosts.filter(post => !post.featured);
---

<BaseLayout
  title={title}
  description={description}
  schemaType="page"
  breadcrumbs={breadcrumbs}
  headerTransparent={true}
>

  <!-- Hero -->
  <PageHeader
    title="Mersin Lastik & Akü Blog"
    subtitle="Araç bakımı, lastik seçimi, akü ömrü ve yol güvenliği konularında uzman içerikler. Doğru bilgiyle doğru kararlar verin."
    badge="Uzman Rehberler"
    breadcrumbs={breadcrumbs}
  />


  <!-- ═══════════════════════════════════════════════════ -->
  <!-- ÖNE ÇIKAN YAZI                                      -->
  <!-- ═══════════════════════════════════════════════════ -->
  {featuredPost && (
    <section class="py-12 lg:py-16 bg-gray-50">
      <div class="container-custom">
        <div class="flex items-center gap-3 mb-8 reveal">
          <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </div>
          <h2 class="text-gray-900 font-bold text-xl">Öne Çıkan Yazı</h2>
        </div>

        <article class="group relative bg-white rounded-2xl overflow-hidden shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-500 reveal reveal-delay-1">
          <a href={`/blog/${featuredPost.slug}`} class="grid grid-cols-1 lg:grid-cols-2">
            <div class="relative aspect-video lg:aspect-auto lg:h-full overflow-hidden">
              <picture>
                <source srcset={featuredPost.image.replace('.jpg', '.webp')} type="image/webp" />
                <img
                  src={featuredPost.image}
                  alt={featuredPost.title}
                  width="800"
                  height="533"
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                  loading="eager"
                  decoding="async"
                />
              </picture>
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent lg:bg-gradient-to-r"></div>
              <div class="absolute top-4 left-4 lg:hidden">
                <span class={`inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold text-white bg-gradient-to-r ${featuredPost.categoryColor}`}>
                  {featuredPost.category}
                </span>
              </div>
            </div>

            <div class="p-8 lg:p-12 flex flex-col justify-center">
              <div class="hidden lg:block mb-4">
                <span class={`inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold text-white bg-gradient-to-r ${featuredPost.categoryColor}`}>
                  {featuredPost.category}
                </span>
              </div>
              <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 group-hover:text-primary transition-colors duration-300">
                {featuredPost.title}
              </h3>
              <p class="text-gray-500 text-base lg:text-lg leading-relaxed mb-6">
                {featuredPost.excerpt}
              </p>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4 text-sm text-gray-400">
                  <time datetime={featuredPost.date}>
                    {new Date(featuredPost.date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </time>
                  <span class="w-1 h-1 bg-gray-300 rounded-full"></span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {featuredPost.readTime} okuma
                  </span>
                </div>
                <span class="inline-flex items-center gap-2 text-primary font-semibold group-hover:gap-3 transition-all duration-300">
                  Oku
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </article>
      </div>
    </section>
  )}


  <!-- ═══════════════════════════════════════════════════ -->
  <!-- TÜM YAZILAR                                         -->
  <!-- ═══════════════════════════════════════════════════ -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container-custom">
      <div class="flex items-center justify-between mb-10 reveal">
        <h2 class="text-2xl lg:text-3xl font-bold text-gray-900">Tüm Yazılar</h2>
        <span class="text-gray-400 text-sm">{blogPosts.length} yazı</span>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {regularPosts.map((post, i) => (
          <article class={`group relative bg-white rounded-2xl overflow-hidden border border-gray-200 hover:border-primary/30 hover:shadow-xl transition-all duration-500 reveal reveal-delay-${Math.min((i % 3) + 1, 4)}`}>
            <a href={`/blog/${post.slug}`} class="block">
              <div class="relative aspect-[16/10] overflow-hidden">
                <picture>
                  <source srcset={post.image.replace('.jpg', '.webp')} type="image/webp" />
                  <img
                    src={post.image}
                    alt={post.title}
                    width="800"
                    height="533"
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                    decoding="async"
                  />
                </picture>
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
                <div class="absolute top-4 left-4">
                  <span class={`inline-flex items-center px-3 py-1.5 rounded-full text-xs font-bold text-white bg-gradient-to-r ${post.categoryColor} shadow-lg`}>
                    {post.category}
                  </span>
                </div>
                <div class="absolute bottom-4 right-4">
                  <span class="inline-flex items-center gap-1 px-2 py-1 rounded-lg text-xs font-medium text-white/90 bg-black/30 backdrop-blur-sm">
                    <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {post.readTime}
                  </span>
                </div>
              </div>

              <div class="p-6">
                <time datetime={post.date} class="text-gray-400 text-xs font-medium">
                  {new Date(post.date).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <h3 class="text-gray-900 font-bold text-lg mt-3 mb-3 leading-snug group-hover:text-primary transition-colors duration-300 line-clamp-2">
                  {post.title}
                </h3>
                <p class="text-gray-500 text-sm leading-relaxed mb-5 line-clamp-2">
                  {post.excerpt}
                </p>
                <div class="flex items-center gap-2 text-primary font-semibold text-sm group-hover:gap-3 transition-all duration-300">
                  Devamını Oku
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>


</BaseLayout>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
